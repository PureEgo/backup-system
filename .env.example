# ===========================================
# BACKUP SYSTEM - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=backup_user
DB_PASSWORD=
DB_DATABASES=database1,database2

# Email Notifications (SMTP)
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=
EMAIL_PASSWORD=
EMAIL_RECIPIENTS=
EMAIL_USE_TLS=true

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_IDS=

# Google Drive Storage
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_CREDENTIALS_FILE=./config/google_drive_credentials.json

# FTP Storage (optional)
FTP_ENABLED=false
FTP_HOST=
FTP_PORT=21
FTP_USER=
FTP_PASSWORD=
FTP_REMOTE_PATH=/backups

# SFTP Storage (optional)
SFTP_ENABLED=false
SFTP_HOST=
SFTP_PORT=22
SFTP_USER=
SFTP_PASSWORD=
SFTP_PRIVATE_KEY=
SFTP_REMOTE_PATH=/backups

# Backup Settings
BACKUP_LOCAL_PATH=./backups
BACKUP_COMPRESSION=true
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_COUNT=10

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=daily
SCHEDULER_TIME=02:00
SCHEDULER_TIMEZONE=UTC

# Web Interface
WEB_ENABLED=true
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/backup.log
